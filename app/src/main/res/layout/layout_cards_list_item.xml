<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:padding="4dp">
            <!-- TEXTO E FOTO -->
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvLetra"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="A"
                    android:background="@drawable/circle_textview"
                    android:elevation="1dp"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/ivImagem"
                    android:layout_width="40dp"
                    android:src="@drawable/nophoto"
                    android:layout_height="40dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNomeProduto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Nome do Produto"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="1"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvDescontoItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="00"
                        android:gravity="right"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="3"
                        android:textColor="@color/colorPrimaryGreen"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCodigoUnidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="CÃ³digo/Unidade"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvQtdPrecoValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QtdePrecoValor"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <!-- DESCONTO -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:visibility="gone"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/tvDesconto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desconto"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryGreen"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>