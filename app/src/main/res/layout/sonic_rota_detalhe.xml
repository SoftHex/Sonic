<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.softhex.sonic.sonicRotaDetalhe">





    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true"
        android:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/mCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary"
            android:fitsSystemWindows="true"
            app:expandedTitleTextAppearance="@style/ExpandedTitleAppearance"
            app:collapsedTitleTextAppearance="@style/CollapsedTitleAppearance"
            app:title="">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pagerSlide"
                android:background="@color/colorPrimaryWhite"
                android:layout_width="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:minHeight="100dp"
                android:layout_height="250dp">

            </androidx.viewpager.widget.ViewPager>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mToolbar"
                android:layout_width="match_parent"
                android:elevation="0dp"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.AppBarOverlay"
                app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed"
                android:layout_gravity="bottom|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_margin="10dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimaryWhite"
                    android:background="@drawable/counter_images"
                    android:text="1/1"/>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/mTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            app:behavior_autoHide="true"
            app:layout_scrollFlags="scroll"
            app:tabIndicator="@drawable/tab_indicator_primary"
            android:background="@color/colorPrimaryWhite"
            app:tabIndicatorFullWidth="false"
            style="@style/DetailTabsTheme"
            android:theme="@style/Theme.MaterialComponents"
            app:tabMode="auto"
            app:tabGravity="fill"
            android:visibility="gone"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- LAYOUT CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- LOGRADROURO E ENDEREÇO-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/tvLogradouro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="LOGRADOURO">

                    </TextView>

                    <TextView
                        android:id="@+id/tvEnderecoCompleto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="ENDEREÇO"/>

                    <TextView
                        android:id="@+id/tvCep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="CEP"/>

                </LinearLayout>

                <!-- SEPARADOR -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorSeparador" />

                <!-- DETALHE DO ATENDIMENTO -->
                <LinearLayout
                    android:id="@+id/llDataHora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llTime"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:layout_margin="20dp"
                        android:animateLayoutChanges="true"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvDuracao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="50sp"
                            android:text="00:00:00"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTime2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:layout_margin="20dp"
                        android:visibility="gone"
                        android:animateLayoutChanges="true"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/tvData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:textColor="@color/colorAccent"
                                android:text="Data: 00/00/0000"/>

                            <TextView
                                android:id="@+id/tvTextoInicio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:textColor="@color/colorAccent"
                                android:text="Iniciado às 00:00"/>

                            <TextView
                                android:id="@+id/tvTextoFim"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="italic"
                                android:textColor="@color/colorAccent"
                                android:text="Concluído às 00:00"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center|bottom"
                            android:layout_gravity="bottom"
                            android:layout_weight="3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="italic"
                                android:textColor="@color/colorAccent"
                                android:text="Duração"/>

                            <TextView
                                android:id="@+id/tvDuracaoMini"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="26sp"
                                android:textStyle="italic"
                                android:text="00:00:00"/>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>


                <!-- SEPARADOR -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorSeparador" />

                <!-- BOTÕES DE AÇÃO -->
                <LinearLayout
                    android:id="@+id/llBotoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btIniciar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimaryWhite"
                        android:background="@drawable/status_nao_iniciado"
                        android:text="INICIAR ATENDIMENTO"/>

                    <Button
                        android:id="@+id/btCancelar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimaryWhite"
                        android:background="@drawable/status_cancelado"
                        android:text="CANCELAR ATENDIMENTO"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- SITUAÇÃO -->
                <LinearLayout
                    android:id="@+id/llSituacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/tvPositivado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/flat_regular_left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Positivado"/>

                    <TextView
                        android:id="@+id/tvNegativado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/flat_regular_middle"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Negativado"/>

                    <TextView
                        android:id="@+id/tvCancelado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/flat_regular_right"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Cancelado"/>

                </LinearLayout>

                <!--DETALHE -->
                <LinearLayout
                    android:id="@+id/llDetalhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNegCancTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Negativado/Cancelado por:"/>

                        <TextView
                            android:id="@+id/tvNegCanc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorTextAccent"
                            android:text="Negativado/Cancelado"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvObservacaoTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Observação:"/>

                        <TextView
                            android:id="@+id/tvObservacao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/colorTextAccent"
                            android:text="Observação"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/fbNavegar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_anchor="@id/appBar"
        android:background="@color/colorPrimaryBlueLight"
        android:backgroundTint="@color/colorPrimaryBlueLight"
        app:layout_anchorGravity="bottom|end"
        android:src="@mipmap/ic_navigation_white_36dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>