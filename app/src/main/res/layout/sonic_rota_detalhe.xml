<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
    tools:context="com.softhex.sonic.sonicRotaDetalhe">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true"
        android:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/mCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary"
            android:fitsSystemWindows="true"
            app:expandedTitleMarginStart="20dp"
            app:maxLines="3"
            app:expandedTitleTextAppearance="@style/ExpandedTitlePrimary"
            app:collapsedTitleTextAppearance="@style/CollapsedTitleWhite"
            app:title="">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pagerSlide"
                android:background="@color/colorPrimaryWhite"
                android:layout_width="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:minHeight="100dp"
                android:layout_height="250dp">

            </androidx.viewpager.widget.ViewPager>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mToolbar"
                android:layout_width="match_parent"
                android:elevation="0dp"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.AppBarOverlay"
                app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/llDots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="6dp"
                android:layout_marginTop="60dp"
                app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed"
                android:layout_gravity="top|center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_margin="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:background="@drawable/counter_images"
                    android:text="1/1"/>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/llEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryWhite"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <!-- LOGRADROURO E ENDEREÇO-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/tvLogradouro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="LOGRADOURO">

            </TextView>

            <TextView
                android:id="@+id/tvEnderecoCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="ENDEREÇO"/>

            <TextView
                android:id="@+id/tvCep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="CEP"/>

        </LinearLayout>

        <!-- SEPARADOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorSeparador" />

        <LinearLayout
            android:id="@+id/llContador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvContador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:text="00:00:00"/>


        </LinearLayout>

        <!-- SEPARADOR -->
        <View
            android:id="@+id/vSeparador"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorSeparador" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:layout_marginTop="160dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:scrollbars="none">

            <ScrollView
                android:id="@+id/svRootView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/llParentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">

                </LinearLayout>

            </ScrollView>

        </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/fbNavegar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:borderWidth="0dp"
        app:layout_anchor="@id/appBar"
        android:background="@color/colorPrimaryBlueLight"
        android:backgroundTint="@color/colorPrimaryBlueLight"
        app:layout_anchorGravity="right|bottom"
        android:src="@mipmap/ic_navigation_white_36dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>