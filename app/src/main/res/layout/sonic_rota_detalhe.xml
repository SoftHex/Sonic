<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".sonicRotaDetalhe">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true"
        android:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/mCollapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/colorPrimary"
            android:fitsSystemWindows="true"
            app:expandedTitleTextAppearance="@style/ExpandedTitleAppearance"
            app:collapsedTitleTextAppearance="@style/CollapsedTitleAppearance"
            app:title="">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pagerSlide"
                android:background="@color/colorPrimaryWhite"
                android:layout_width="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:minHeight="100dp"
                android:layout_height="250dp">

            </androidx.viewpager.widget.ViewPager>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mToolbar"
                android:layout_width="match_parent"
                android:elevation="0dp"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.AppBarOverlay"
                app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                app:layout_scrollFlags="scroll|snap|enterAlwaysCollapsed"
                android:layout_gravity="bottom|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_margin="10dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimaryWhite"
                    android:background="@drawable/counter_images"
                    android:text="1/1"/>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/mTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            app:behavior_autoHide="true"
            app:layout_scrollFlags="scroll"
            app:tabIndicator="@drawable/tab_indicator_primary"
            android:background="@color/colorPrimaryWhite"
            app:tabIndicatorFullWidth="false"
            style="@style/DetailTabsTheme"
            android:theme="@style/Theme.MaterialComponents"
            app:tabMode="auto"
            app:tabGravity="fill"
            android:visibility="gone"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- LAYOUT CONTAINER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- LOGRADROURO E ENDEREÇO-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/tvLogradouro"
                        android:transitionName="nomeTransition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="LOGRADOURO">

                    </TextView>

                    <TextView
                        android:id="@+id/tvEnderecoCompleto"
                        android:transitionName="grupoTransition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="ENDEREÇO"/>

                    <TextView
                        android:id="@+id/tvCep"
                        android:transitionName="detalheTransition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="CEP"/>

                </LinearLayout>

                <!-- SEPARADOR -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorSeparador" />

                <!-- DETALHE DO ATENDIMENTO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_margin="20dp"
                    android:gravity="center">

                    <!-- HORA INÍCIO E FIM-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="top"
                        android:layout_weight="1">

                        <!-- DATA INÍCIO -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data:"/>

                            <TextView
                                android:id="@+id/tvDataInicio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:textColor="@color/colorAccent"
                                android:textStyle="italic"
                                android:text="--:--:--"/>

                        </LinearLayout>

                        <!-- HORA INÍCIO -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Início:"/>

                            <TextView
                                android:id="@+id/tvHoraInicio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:textColor="@color/colorAccent"
                                android:textStyle="italic"
                                android:text="--:--:--"/>

                        </LinearLayout>

                        <!-- HORA FIM -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fim:"/>

                            <TextView
                                android:id="@+id/tvHoraFim"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="6dp"
                                android:textColor="@color/colorAccent"
                                android:textStyle="italic"
                                android:text="--:--:--"/>

                        </LinearLayout>


                    </LinearLayout>

                    <!-- DATA INÍCIO E DURAÇÃO-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center|right"
                        android:layout_gravity="center|right"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvDuracao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="40sp"
                            android:text="00:00:00"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- SEPARADOR -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1px"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/colorSeparador" />

                <!-- BOTÕES DE AÇÃO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btIniciar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimaryWhite"
                        android:background="@drawable/status_nao_iniciado"
                        android:text="INICIAR ATENDIMENTO"/>

                    <Button
                        android:id="@+id/btCancelar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimaryWhite"
                        android:background="@drawable/status_cancelado"
                        android:text="CANCELAR ATENDIMENTO"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llDetalhe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/tvSituacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryRed"
                        android:text="Positivado/Negativado"/>

                    <TextView
                        android:id="@+id/tvNegativacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorTextAccent"
                        android:text="Motivo"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Observação:"/>

                    <TextView
                        android:id="@+id/tvObservacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorTextAccent"
                        android:text="Observação"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

    <com.github.clans.fab.FloatingActionButton
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fbNavegar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_anchor="@id/appBar"
        app:layout_anchorGravity="bottom|right|end"
        fab:fab_colorNormal="@color/colorPrimaryBlueLight"
        fab:fab_colorPressed="@color/colorPrimaryWhite"
        android:src="@mipmap/ic_navigation_white_36dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>