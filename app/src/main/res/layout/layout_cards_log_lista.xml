<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        android:background="?selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-5dp"
            android:background="?selectableItemBackground">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/codigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/letra"
                    android:elevation="100dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:text="#1"
                    android:textColor="@color/colorTextAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/codigo"
                    android:layout_below="@+id/codigo"
                    android:textColor="@color/colorTextNoAccent"
                    android:text="Manufacturer:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/manufacturer"
                    android:layout_below="@+id/manufacturer"
                    android:textColor="@color/colorTextNoAccent"
                    android:text="Model:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/model"
                    android:layout_below="@+id/model"
                    android:textColor="@color/colorTextNoAccent"
                    android:text="Version:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/version"
                    android:layout_below="@+id/version"
                    android:textColor="@color/colorTextNoAccent"
                    android:text="Activity:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/classe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/activity"
                    android:layout_below="@+id/activity"
                    android:textColor="@color/colorTextNoAccent"
                    android:text="Class:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/erro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/classe"
                    android:layout_below="@+id/classe"
                    android:textColor="@color/colorTextNoAccent"
                    android:text="Error:"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/data_hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"
                    android:textSize="10dp"
                    android:text="Data/Hora"
                    android:gravity="center" />

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/layout"
                android:background="@drawable/separator_gradient_horizontal" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>