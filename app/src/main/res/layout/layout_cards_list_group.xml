<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="4dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEmpresa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="-6dp"
                    android:textSize="16sp"
                    android:text="Empresa"/>

                <TextView
                    android:id="@+id/tvCodigo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:text="#00000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/tvC1L1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AG COBRADOR/ TP COB."
                        android:maxLines="1"
                        android:ellipsize="end" />
                    <TextView
                        android:id="@+id/tvC1L2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PRAZO"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:drawableLeft="@mipmap/ic_timetable_grey600_18dp"
                        android:drawablePadding="6dp"/>
                    <TextView
                        android:id="@+id/tvC1L3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VENDEDOR"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_weight="5">

                    <TextView
                        android:id="@+id/tvC2L1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DATA"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/tvC2L2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VALOR"
                        android:gravity="right" />

                    <TextView
                        android:id="@+id/tvC2L3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VALOR DESC"
                        android:gravity="right"
                        android:textColor="@color/colorTextPrimaryGreen"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp">
            <ProgressBar
                android:id="@+id/pbGroup"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>