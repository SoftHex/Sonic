<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/IntroTheme">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:elevation="0dp"
            android:layout_marginBottom="-50dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ciPerfil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/colorPrimaryWhite"
                app:civ_border_width="10dp"
                android:src="@drawable/no_profile"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:elevation="-1dp"
            android:background="@drawable/rounded_box_top"
            android:layout_width="match_parent"
            android:layout_height="50dp">


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/rounded_box_bottom"
            android:layout_width="275dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvEmpresa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorTextAccentDark"
                    android:textSize="16dp"
                    android:text="EMPRESA"/>

                <TextView
                    android:id="@+id/tvUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_marginTop="20dp"
                    android:text="NOME DO VENDEDOR"/>

                <TextView
                    android:id="@+id/tvCargo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/colorTextAccentDark"
                    android:layout_marginTop="2dp"
                    android:text="CARGO"/>


            </LinearLayout>

            <EditText
                android:id="@+id/etSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:drawablePadding="-24dp"
                android:textCursorDrawable="@drawable/blackpipe"
                android:background="@drawable/border_bottom"
                android:textAlignment="center"
                android:drawableLeft="@mipmap/ic_key_variant_grey600_24dp"
                android:inputType="textPassword"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvMensagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:padding="20dp"
                android:textColor="@color/colorTypeWrong"
                android:layout_marginTop="0dp"
                android:text=""/>

        </LinearLayout>

        <Button
            android:id="@+id/btEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimaryWhite"
            android:text="ENTRAR"
            android:background="@drawable/border_round"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>
