<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- IMAGEM -->
            <ImageView
                android:id="@+id/ivImagem"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/nophoto"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNomeProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Nome do Produto"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="@color/colorTextPrimary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCodigoUnidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="CÃ³digo/Unidade"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextAccent"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvQtdPrecoValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QtdePrecoValor"
                            android:textSize="12sp"
                            android:textColor="@color/colorTextAccent"/>

                    </LinearLayout>

                    <!-- DESCONTO -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:visibility="gone"
                        android:layout_weight="3">

                        <TextView
                            android:id="@+id/tvDesconto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desconto"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:textSize="12sp"
                            android:textColor="@color/colorPrimaryGreen"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>