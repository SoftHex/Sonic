<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- FROMA DE PAGAMENTO E DATA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="2">
                <!-- FORMA PGTO E PRAZO -->
                <TextView
                    android:id="@+id/tvTipoCobranca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:drawableLeft="@mipmap/ic_cash_grey600_24dp"
                    android:drawableTint="@color/colorPrimaryGreen"
                    android:drawablePadding="8dp"
                    android:layout_marginLeft="-3dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"/>
                <!-- CODIGO MOBILE -->
                <TextView
                    android:id="@+id/tvPrazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"/>
                <!-- CODIGO MOBILE -->
                <TextView
                    android:id="@+id/tvCodigoMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextPrimary"/>

            </LinearLayout>

            <!-- DATA, VALOR GERAL E DESCONTO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="6dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tvData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tvValorDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimaryRed"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>